<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ShoesShop" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowSplashScreenBackground">@color/Accent</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_round</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ShoesShop</item>
    </style>
</resources>